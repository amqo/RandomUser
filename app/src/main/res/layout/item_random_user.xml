<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View"/>
        <import type="com.amqo.randomuser.db.entity.RandomUserEntry"/>

        <variable
            name="randomUser"
            type="com.amqo.randomuser.db.entity.RandomUserEntry"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/user_data_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical" tools:ignore="RelativeOverlap">

            <TextView
                android:id="@+id/user_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{randomUser.fullName}"
                android:textAppearance="?attr/textAppearanceListItem"/>

            <TextView
                android:id="@+id/user_mail_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@{randomUser.email}"
                android:textAppearance="?attr/textAppearanceListItem"/>

        </LinearLayout>

        <Button
            android:id="@+id/remove_user_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="Remove"/>

    </RelativeLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <import type="com.amqo.randomuser.db.entity.RandomUserEntry"/>

        <variable
            name="randomUser"
            type="com.amqo.randomuser.db.entity.RandomUserEntry"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/user_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginBottom="@dimen/margin_small"
            app:circleImageUrl="@{randomUser.picture.large}"
            android:scaleType="centerInside"/>

        <TextView
            android:id="@+id/user_gender"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            style="?android:attr/textAppearanceLarge"
            android:drawableStart="@drawable/ic_gender_black_24dp"
            android:layout_below="@+id/user_image"
            android:layout_centerHorizontal="true"
            android:drawablePadding="@dimen/padding_small"
            android:text="@{randomUser.genderCapitalized}"
            android:layout_marginTop="@dimen/margin_medium"/>

        <TextView
            android:id="@+id/user_mail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="?android:attr/textAppearanceLarge"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_below="@+id/user_gender"
            android:layout_centerHorizontal="true"
            android:text="@{randomUser.email}"
            android:textIsSelectable="true"
            tools:context=".ui.detail.RandomUserDetailFragment"/>

        <TextView
            android:id="@+id/user_registered"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="?android:attr/textAppearanceMedium"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_below="@+id/user_mail"
            android:layout_centerHorizontal="true"
            android:text="@{`Registered since ` + randomUser.dateFormatted}"
            android:textIsSelectable="true"
            tools:context=".ui.detail.RandomUserDetailFragment"/>

    </RelativeLayout>

</layout>
